{
  "name": "bun-sqlite",
  "module": "src/index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.21.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.10"
  },
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "db:gen": "bunx drizzle-kit generate --dialect sqlite --schema src/db/schema.ts",
    "db:mig": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts"
  }
}